
<div class="flex items-center p-5">

  <div class="">
    <h3 class="text-3xl font-bold dark:text-white py-5">Viewing Quizzes</h3>
    <h6 class="text-lg font-bold dark:text-white"><%= pluralize(Quiz.all.count, 'Quiz') %></h6>


    <% Quiz.all.each do |quiz| %>
        <div class="max-w-sm bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700 w-50 m-2">
            <img class="h-auto max-w-full rounded-t-md" src="<%= quiz.image %>"/>
            <div class="p-5">
                <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white"><%= quiz.title %></h5>
                <p class="mb-3 font-normal text-gray-700 dark:text-gray-400"><%= quiz.description %></p>
                <%= link_to(quiz_path(quiz)) do %>
                  <button type="button" class="text-white bg-gradient-to-br from-pink-500 to-orange-400 hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-pink-200 dark:focus:ring-pink-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center me-2 mb-2">View</button>
                <% end %>
                <a target="_blank" href="<%= "http://localhost:5173/#{quiz.id}" %>">
                  <button type="button" class="text-white bg-gradient-to-br from-red-600 to-purple-600 hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-pink-200 dark:focus:ring-pink-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center me-2 mb-2">Play</button>
                </a>
            </div>
        </div>
    <% end %>
  </div>
</div>
